{
  "name": "carbondesignsystem",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "plugins/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "dev": "gatsby develop -H 0.0.0.0",
    "dev:clean": "gatsby clean && yarn dev",
    "clean": "gatsby clean",
    "build": "node --max-old-space-size=4096 ./node_modules/.bin/gatsby build",
    "build:clean": "gatsby clean && yarn build",
    "build:analyze": "yarn install --force && yarn clean && ANALYZE=true yarn build",
    "serve": "gatsby serve",
    "lint:js": "eslint . --fix",
    "format": "prettier --write 'src/**/*.{css,scss,json,html,yaml,md,mdx}'",
    "update-browserslist": "npx browserslist-ga"
  },
  "engines": {
    "node": ">=10"
  },
  "browserslist": [
    "last 1 edge version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 chrome version"
  ],
  "eslintIgnore": [
    "/public/*",
    "/.cache/*",
    "/node_modules/*"
  ],
  "resolutions": {
    "carbon-components": "^10.30.0-rc.0",
    "carbon-components-react": "^7.30.0-rc.0",
    "@carbon/elements": "^10.29.0-rc.0",
    "@carbon/icons": "^10.27.0-rc.0",
    "@carbon/icons-react": "^10.27.0-rc.0",
    "gatsby-remark-images": "^3.3.33"
  },
  "dependencies": {
